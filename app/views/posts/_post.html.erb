
    <div class="post-container medium-6 large-6 columns padded-column">
      <div class="post story <%= post.post_type  %> <%= "draft" unless post.published? %>">
    <div class="post-content">
      <div class="small-12 title">
        <%= link_to post.user do %>
          <em class="user-email"><%= post.user && post.user.nom_de_plume_short %></em>
      <% end %>
        <%= link_to post, class: "dont-be-blue" do %>
          <strong class="post-title"><%= post.title %></strong>
      </div>
      <div class="body">
        <% if post.post_type == "haiku"  %>
          <% post.body.lines.each do |line|  %>
            <div class="haiku-text">
              <%= line  %>
            </div>
          <% end %>
        <% else %>
        <div>
          <%= post.body  %>
        </div>
      <% end %>
      </div>
    </div>
  <% end %>
  </div>

    </div>
